generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model customers {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  name    String
  email   String @unique
  address String
  cpf     String @unique
  phone   String
}

model users {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  username String
  email    String @unique
  password String
}
